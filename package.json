{
  "name": "czollectr",
  "version": "0.1.0",
  "description": "This tool loads a `json`-structured license object and creates a static site using `ejs` templates.",
  "main": "index.ts",
  "bin": "czollectr",
  "scripts": {
    "build": "npm run styles && gulp && npm run clean-package",
    "build:qa": "npm test && npm run tslint && npm run styles && gulp && npm run clean-package",
    "clean-package": "node ./buildtools/cleanup-package.js",
    "dev:js": "npm run tsc && npm run styles && npm run czollectr:ts",
    "dev:ts": "npm run styles && npm run czollectr:ts",
    "styles": "node-sass ./styles/scss/index.scss ./styles/css/styles.css",
    "styles:assets": "node-sass ./styles/scss/index.scss ./assets/css/styles.css",
    "czollectr:js": "npm run styles:assets && node ./src/czollectr.js",
    "czollectr:ts": "npm run styles:assets && ts-node ./src/czollectr.ts",
    "watch": "watch 'npm run build' ./src",
    "tsc": "tsc",
    "tsc:watch": "tsc -w",
    "serve": "serve ./publish",
    "test": "ts-node node_modules/jasmine/bin/jasmine",
    "tslint": "tslint --project tsconfig.json src/**/*.ts",
    "tslint-report": "node tools/tslint-html-reporter/tslint-html-reporter.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/comcy/CLLPSCRWLR.git"
  },
  "author": "Christian Silfang (comcy)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/comcy/CLLPSCRWLR/issues"
  },
  "homepage": "https://github.com/comcy/CLLPSCRWLR#readme",
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/jasmine": "^3.3.1",
    "@types/node": "^10.12.20",
    "cross-env": "^5.2.0",
    "del": "^3.0.0",
    "fs": "0.0.1-security",
    "gulp": "^3.9.1",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-tslint": "^8.1.3",
    "gulp-typescript": "^5.0.0-alpha.3",
    "jasmine": "^3.3.1",
    "jasmine-core": "^3.3.0",
    "jasmine-reporters": "^2.3.2",
    "jasmine-spec-reporter": "^4.2.1",
    "jasmine-trx-reporter": "^2.2.2",
    "jasmine-ts": "^0.3.0",
    "node-sass": "^4.11.0",
    "serve": "^10.0.2",
    "standard-version": "^4.4.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-clean-code": "^0.2.9",
    "tslint-html-reporter": "^1.0.0",
    "typescript": "^3.1.6",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "@types/minimist": "^1.2.0",
    "ejs": "^2.6.1",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "load-json-file": "^5.1.0",
    "minimist": "^1.2.0",
    "moment": "^2.22.2"
  }
}
